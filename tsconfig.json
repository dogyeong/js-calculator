{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2020",
    "strict": true,
    "importHelpers": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": false,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/ts/*"]
    },
    "noEmit": false,
    "lib": ["esnext", "dom", "dom.iterable"],
    "strictPropertyInitialization": false,
    "outDir": "src/js"
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}